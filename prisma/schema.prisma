generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt        DateTime  @default(now())
  resetToken       String?
  resetTokenExpiry DateTime?
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  slug      String    @unique
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  published Boolean   @default(false)
  pinned    Boolean   @default(false)
  archived  Boolean   @default(false)
  views     Int       @default(0)
  tags      PostTag[]

  @@index([published, archived, createdAt(sort: Desc)])
  @@index([pinned, published])
  @@index([slug])
}

model Tag {
  id    Int       @id @default(autoincrement())
  name  String    @unique
  posts PostTag[]

  @@index([name])
}

model PostTag {
  postId Int
  tagId  Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model Settings {
  id           Int      @id @default(autoincrement())
  siteName     String   @default("Blackout")
  description  String   @default("Welcome to Blackout")
  aboutContent String   @default("# **Blackout** â€“ a sleek, developer-friendly blogging platform built with **Next.js** for fast, modern, and minimalistic content creation.")
  
  // SEO Fields
  metaTitle         String   @default("Blackout")
  metaDescription   String   @default("Welcome to Blackout")
  metaKeywords      String   @default("")
  ogTitle           String   @default("Blackout")
  ogDescription     String   @default("Welcome to Blackout")
  ogImage           String   @default("")
  twitterCard       String   @default("summary_large_image")
  twitterSite       String   @default("")
  sitemapEnabled    Boolean  @default(true)
  robotsTxt         String   @default("User-agent: *\\nAllow: /")
  
  // Google Analytics
  googleAnalyticsId String   @default("")
  
  // Privacy Policy
  privacyPolicy     String   @default("")
  contactEmail      String   @default("rainielmontanez@dex-server.space")
  
  updatedAt    DateTime @updatedAt
}
